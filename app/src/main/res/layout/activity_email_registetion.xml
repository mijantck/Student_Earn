<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailRegistetionActivity">

    <RelativeLayout
        android:layout_marginTop="-40dp"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="600dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Sign Up"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="________"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/userE"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="User Name"
            android:layout_margin="10dp"
            android:background="@drawable/backw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:visibility="gone"
            android:id="@+id/userpho"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Phone "
            android:layout_margin="10dp"
            android:background="@drawable/backw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/userEM"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Email "
            android:layout_margin="10dp"
            android:background="@drawable/backw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="numberPassword"
            android:id="@+id/userPas"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="password "
            android:layout_margin="10dp"
            android:background="@drawable/backw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="numberPassword"
            android:id="@+id/userPasRR"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Confirm password "
            android:layout_margin="10dp"
            android:background="@drawable/backw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/reff"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:hint="Refer code (1234) "
            android:layout_margin="10dp"
            android:background="@drawable/backw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:textColor="@android:color/white"
                android:text="I Accept Terms &amp; Condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView

            android:id="@+id/signupT"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="SIGN UP"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@drawable/backg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>