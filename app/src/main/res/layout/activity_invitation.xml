<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvitationActivity">

    <RelativeLayout
        android:gravity="center"
        android:id="@+id/relative444"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/back">

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="#130D3A"
        android:gravity="right"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_keyboard_backspace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Invite and earn"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="7dp"
                android:gravity="right">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/watch"
                    android:layout_gravity="center"
                    android:backgroundTint="#298E2D"
                    android:translationZ="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="1dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/watch">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/gold_logo" />

                        <TextView
                            android:layout_marginRight="6dp"
                            android:id="@+id/textViewCoins1ee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/font"
                            android:text="100000"
                            android:textColor="#FBFBFB" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ddd" />

                        <TextView
                            android:id="@+id/textViewDoller11sd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/font"
                            android:text="100000"
                            android:textColor="#FBFBFB" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relative444"
        android:id="@+id/info_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="20dp"
        android:translationZ="2dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="17dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="You will get $0.10 joining bonus per referral. Moreover,there is a 15% referral commission."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/rrr"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#4CD7C3"
        android:textSize="30dp"
        android:layout_below="@+id/info_card"
        android:text="YOUR REFERRAL CODE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/uuu"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@+id/rrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="jdhfwo"
            android:id="@+id/refecodeMe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@+id/uuu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/reee"
            android:paddingRight="30dp"
            android:background="@drawable/backg"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Refer Now"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>